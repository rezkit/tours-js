{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "src/",
    "outDir": "lib/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "declaration": true
  },
  "include": [
    "./src",
    "./.eslintsrc.cjs",
  ],
  "exclude": [
    "./node_modules/",
    "**/*.spec.ts",
    "./examples",
  ]
}
