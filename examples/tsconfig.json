{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": ".",
    "outDir": "lib/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "preserveValueImports": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "declaration": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
